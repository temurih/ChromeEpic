{
    "manifest_version": 2,
    "name": "Chrome Epic",
    "version": "1.0.0",

    "description": "Making chrome epic",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },

    "permissions": [
        "activeTab",
        "storage"
    ],

    "web_accessible_resources": ["content/waffleStyle.css"],

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content/contentScript.js"]
        },
        {
            "matches": [
                "https://*.github.com/*",
                "http://*.github.com/*"
            ],
            "js": ["content/githubScript.js"]
        },
        {
            "matches": [
                "https://*.waffle.io/*",
                "http://*.waffle.io/*"
            ],
            "css": ["content/waffleStyle.css"],
            "js": ["content/waffleScript.js"]
        }
    ],

    "browser_action": {
        "default_icon": {
            "16": "icons/icon16.png",
            "24": "icons/icon24.png",
            "32": "icons/icon32.png"
        },
        "default_title": "Chrome Epic",
        "default_popup": "popup/popup.html"
    }
}